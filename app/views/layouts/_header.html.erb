#coding: utf-8
<header>
  <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
      <li><%= link_to "Главная", root_path %></li>

      <% if signed_in? %>
        <li><%= link_to "Профиль", user_path(current_user) %></li>
        <li><%= link_to "Пользователи", users_path %></li>
        <li><%= link_to "Настройки", edit_user_path(current_user) %></li>
      <% end %>

      <li><%= link_to "Помощь", help_path %></li>

      <% if signed_in? %>
        <li><%= link_to "Выход", signout_path, :method => :delete, :class=> :sign %></li>
      <% else %>
        <li><%= link_to "Вход", signin_path, :class=> :sign %></li>
      <% end %>

    </ul>
  </nav>
</header> 